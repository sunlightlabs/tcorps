
<div class="mainTaskHeader">
	<h2>Sign In</h2>
</div>	
<p>Don't have an account? <%= link_to 'Sign up', register_path %> now!</p>

<% form_for @user_session, :url => user_session_path do |f| %>
	<ul>
		<li>
  			<%= f.label :login %>
  			<%= f.text_field :login %>
		</li>
		<li>
  			<%= f.label :password %>
  			<%= f.password_field :password %>
		</li>
  <!--<h4> or login using OpenID</h4>
  <%= f.label :openid_identifier %>
  <%= f.text_field :openid_identifier %>-->

  <%= f.submit 'Login' %>

<% end %>


